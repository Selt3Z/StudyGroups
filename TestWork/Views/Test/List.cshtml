@model IEnumerable<TestWork.Models.LearningGroupsModel>

@{
    ViewBag.Title = "List";
}

<h2>Создание учебной группы</h2>


<table class="table">
    <tr>
        <th>
            Название
        </th>
        <th>
            Преподаватель
        </th>
        <th>
            Количество студентов
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameStudyGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FioTeacher)
            </td>
            <td>
            @Html.DisplayFor(modelItem => item.CountOfStudents)
            </td>
            <td>
               @Html.ActionLink("Редактировать", "Edit", new { id=item.IdStudyGroup})
            </td>
        </tr>
    }
</table>

<input type="button" title="Create" value="Создать учебную группу" onclick="location.href='@Url.Action("Create", "Test")'" />